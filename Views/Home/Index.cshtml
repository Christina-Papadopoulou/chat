@{
    ViewBag.Title = "Login";
}


<div class="row">
    <div class="col-md-12 ">
        <div class="jumbotron">
            <h1>Hello My Lovely Chat</h1>
            <p class="lead">This application demonstrate the web security concept</p>
        </div>

        @using (Html.BeginForm("login", "Home")) {
            <div class="form-group">
                <label for="exampleInputEmail1">User Name</label>
                <input type="text" class="form-control" name="username" aria-describedby="emailHelp" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="text" class="form-control" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          }
            <br />

            @Html.ActionLink("Register", "index", "register")
        </div>

</div>